/**index.wxss**/
.box{
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
}
.item:after{
    content: " ";
    position: absolute;
    bottom: 0;
    right: 0;
    height: 1px;
    border-bottom: 1px solid #d9d9d9;
    color: #d9d9d9;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
    left: 0;
    z-index: 2;
}
.item{
  background: #FFFFFF;
  width: 100%;
  height: 260rpx;
  display: flex;
  flex-direction: row;
  position: relative;
  align-items: center;
  justify-content: space-between;
}

.item-box{
  
}
.item-title{
  margin-left: 25rpx;
  margin-top: 35rpx;
  font-size: 33rpx;
  letter-spacing: 4rpx;
  width: 97%;
  line-height: 50rpx;
  color: #3B4750;
}
.tag-time{
  margin-left: 25rpx;
  margin-top: 35rpx;
  font-size: 25rpx;
  width: 90%;
  justify-content: space-between;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.tag{
  padding: 5rpx 10rpx;
  background: #E9F2FA;
  color: #8EBFE2;
}
.time{
  color: #C5C5C5;
}
.img{
  max-width: 200rpx;
  max-height: 200rpx;
  border-radius: 10rpx;
  margin-right: 10px;
}






