/* pages/detal/detal.wxss */
/* 导航栏宽度 */
.box{
  width: 95%;
  margin: 0 auto;
}
.top{
  margin-top: 20rpx;
}
.top .title{
  font-size: 40rpx;
  font-weight: 600;
  letter-spacing: 4rpx;
  line-height: 50rpx;
  color: #3B4750;
}
.top .tag{
  padding: 5rpx 10rpx;
  background: #E9F2FA;
  color: #8EBFE2;
  font-size: 30rpx;
}
.user{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 30rpx;
}
.user .img{
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
}
.user .user-text{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.user-text-1{
  font-size: 22rpx;
  font-weight: bold;
}
.user-text-2{
  font-size: 22rpx;
  color: gray;
}
.content{
  margin-top: 10rpx;
  margin-bottom: 30rpx;
}


rich-text {
  width: 670rpx;
  display: block;
  font-size: 30rpx;
  color: #353535;
  letter-spacing: 5rpx;
}
.end{
  margin-top: 50rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 700;
  margin-bottom: 50rpx;
}
.loading{
  height: 60vh;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}